@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1 class="display-4 mb-3">Cross the Bridge of Death</h1>
    <div class="card shadow w-50">
        <div class="card-body">
            <form action="/results" method="post">
                <div class="mb-3">
                    <label for="Name" class="form-label">What is your name:</label>
                    <input type="text" name="Name" id="Name" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="FavoriteColor" class="form-label">Favorite color:</label>
                    <input type="text" name="FavoriteColor" id="FavoriteColor" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="AverageSpeed" class="form-label">What is the average unladen speed of a swallow?</label>
                    <input type="number" name="AverageSpeed" id="AverageSpeed" class="form-control">
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Cross bridge</button>
                </div>
            </form>
        </div>
    </div>
</div>