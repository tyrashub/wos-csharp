@model Dishes;

@{
    var dishes = Model;
    ViewData["Title"] = "Show Dish Page";
}

<body>
    <div class="container">
        <h1 class="mb-2 text-center">@dishes.Name</h1>
        <nav class="text-center mb-3">
            <a href="/" class="text-white text-decoration-none">Home</a> |
            <a href="/dishes/new" class="text-white text-decoration-none">Add a Dish</a>
        </nav>
        <p class="lead">@dishes.Name by @dishes.Chef</p>

        <div class="card mb-4">
            <div class="card-body">
                <p><strong>Description:</strong> @dishes.Description</p>
                <p><strong>Calories:</strong> @dishes.Calories</p>
                <p><strong>Tastiness:</strong> @dishes.Tastiness</p>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <form asp-action="DeleteDish" asp-controller="Home" asp-route-dishesId="@dishes.DishesId" method="post">
                <input type="hidden" name="dishId" value="@dishes.DishesId" />
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>

            <a href="/dishes/@dishes.DishesId/edit" class="btn btn-primary">Edit</a>
        </div>
    </div>

</body>