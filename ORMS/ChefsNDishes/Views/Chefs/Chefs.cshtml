@model ChefsPageViewModel;

@{
    var chef = Model.Chef;
    var chefs = Model.Chefs;
    ViewData["Title"] = "Chefs Page";
}

<section>
    <h1 class="display-4 mb-3 text-center">Check out our roster of chefs!</h1>
    <div class="row">
        <div class="col-12 col-md-6">
            <h2 class="display-6 mb-3 text-center">All Chefs</h2>
            @await Html.PartialAsync("_AllChefs", chefs)
        </div>
        <div class="col-12 col-md-6">
            <h2 class="display-6 mb-3 text-center">Add a Chef</h2>
            @await Html.PartialAsync("_AddAChef", chef)
        </div>
    </div>
</section>
