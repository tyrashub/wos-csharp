@model Chef;

<div class="card shadow">
    <div class="card-body">
        <form asp-action="CreateChef" asp-controller="Chefs" method="post">
            <div class="mb-3">
                <label class="form-label" asp-for="FirstName"></label>
                <input class="form-control" asp-for="FirstName">
                <span class="form-text text-warning" asp-validation-for="FirstName"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="LastName"></label>
                <input class="form-control" asp-for="LastName">
                <span class="form-text text-warning" asp-validation-for="LastName"></span>
            </div>
             <div class="mb-3">
                <label class="form-label" asp-for="DateOfBirth">Date of Birth</label>
                <input type="date" class="form-control" asp-for="DateOfBirth">
                <span class="form-text text-warning" asp-validation-for="DateOfBirth"></span>
            </div>
            <div class="text-end">
                <button type="submit" class="btn btn-primary">Add Chef</button>
            </div>
        </form>
    </div>
</div>
