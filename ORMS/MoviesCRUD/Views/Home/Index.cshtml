@model List<Movie>;

@{
    var movies = Model;
    ViewData["Title"] = "Home Page";
}

<div>
    <h1 class="display-4 mb-3">All Movies</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Duration in Minutes</th>
                <th>Rating</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in movies)
            {
                <tr>
                    <td><a href="/movies/@movie.MovieId">@movie.Title</a></td>
                    <td>@movie.DurationInMInutes</td>
                    <td>@movie.Rating</td>
                    <td class="d-flex align-items-center gap-2">
                        <a class="btn btn-sm btn-warning" href="/movies/@movie.MovieId/edit">Edit Movie</a>
                        <form asp-action="DeleteMovie" asp-controller="Home" asp-route-movieId="@movie.MovieId"
                            method="post">
                            <div class="text-end">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </div>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>