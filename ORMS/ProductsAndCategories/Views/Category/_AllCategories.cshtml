@model List<Category>;

@{
    
    var categories = Model;
   
}
<div class="card shadow">
    <div class="card-body">
        <ul class="list-group list-group-flush">
            @foreach (var category in categories)
            {
                <li class="list-group-item">
                    <a href="/categories/@category.CategoryId">@category.Name</a>
                </li>
            }
        </ul>
    </div>
</div>