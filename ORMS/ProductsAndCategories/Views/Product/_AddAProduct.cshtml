@model Product;

<div class="card shadow">
    <div class="card-body">
        <form asp-action="CreateProduct" asp-controller="Product" method="post">
            <div class="mb-3">
                <label class="form-label" asp-for="Name"></label>
                <input class="form-control" asp-for="Name" id="focus-input">
                <span class="form-text text-warning" asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                 <span class="form-text text-warning" asp-validation-for="Description"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Price"></label>
                <input class="form-control" asp-for="Price" type="number" step=".01">
                <span class="form-text text-warning" asp-validation-for="Price"></span>
            </div>
            <div class="text-end">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>
</div>
