@using SoloProject.ViewModels
@using SoloProject.Models
@model CollectionsPageViewModel;

@{
    var user = Model.User;
    var collections = Model.Collections;
    Layout = "~/Views/Collection/_CollectionsLayout.cshtml";
    ViewData["Title"] = "Collections";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar/index.global.min.js'></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/css/bootstrap (minty).css"> *@
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="body">
    
    <!-- My Collections -->
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-10">
                    <h2 class="text-white">My Collectionsü™Ñ</h2>
                    <div class="row">
                        @foreach (var collection in collections)
                        {
                            <div class="col-md-3 mb-3">
                                <div class="card shadow collection-card1 d-flex" style="background-color: #b48676fb; flex-direction: column;">
                                    <img src="@collection.CoverImage" class="card-img-top img" alt="Cover Image">
                                    <div class="card-body cover-img text-center align-content-end">
                                        <h5 class="card-title text-white">@collection?.CollectionName</h5>
                                        <small class="text-white">Uploaded on: @collection?.Date?.ToString("MM/dd/yyyy")</small>
                                        <a href="/collections/@collection?.CollectionId" style="background-color: #7a391b9f;" class="btn btn shadow text-white mt-2 btn">View</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <!-- Profile Card -->
                <div class="col-sm-2 mt-5">
                    <div class="card mb-5 p-3 collection-card1 profile" style="height: fit-content; background-color: #bd7861a5; position: sticky; top: 20px;">
                        <h3 class="text-white text-justify">My Profile</h3>
                        <div class="card-body p-2">
                            <img src="@user?.ProfileImage" class="rounded-circle mb-3" alt="Profile Image" style="width: 100px; height: 100px;">
                            <h5 class="card-title text-white text-justify">Welcome back,<a href="#" class="text-decoration-none">@Html.Raw("@")@user?.Username</a></h5>
                            <br>
                            <strong><h6 class="text-white">About Me:</h6></strong>
                            <p class="text-white">@user?.Bio</p>
                            <a href="/collections/profile/@user?.UserId/edit" class="btn btn-sm text-white" style="background-color:#7a391b9f;">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


